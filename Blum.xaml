        <TextBox HorizontalAlignment="Left" Height="106" Margin="123,200,0,0" TextWrapping="Wrap" AcceptsReturn="True" Text="" Name="outPutEncrypt" VerticalAlignment="Top" Width="645"/>
        <Label Content="Encoding time" HorizontalAlignment="Left" Margin="123,320,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.373,0.549"/>
        <Label Content="Decoding time&#xD;&#xA;" HorizontalAlignment="Left" Margin="530,320,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.373,0.549"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="123,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Name="publicKey"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="530,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="109" Name="privateKey"/>



    </Grid>
</Window>
