    <Grid Background="BlueViolet" Height="462" VerticalAlignment="Top">
        <Button Content="Browse" Name="browseButton" HorizontalAlignment="Left" Margin="123,10,0,0" VerticalAlignment="Top" Width="97" Click="browseButton_Click" Height="46"/>
        <Button Content="Encrypt" Name="encryptButton" HorizontalAlignment="Left" Margin="237,10,0,0" VerticalAlignment="Top" Width="87" Click="encryptButton_Click" Height="46"/>
        <Button Content="Decrypt" Name="decryptButton" HorizontalAlignment="Left" Margin="341,10,0,0" VerticalAlignment="Top" Width="82" Click="decryptButton_Click" Height="46"/>
        <Label Content="Original Text" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.388,2.446"/>
        <TextBox Name="inputMessege"  HorizontalAlignment="Left" Height="108" Margin="123,70,0,0" TextWrapping="Wrap" AcceptsReturn="True" Text=""  VerticalAlignment="Top" Width="645"/>
